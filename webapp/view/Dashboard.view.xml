<mvc:View xmlns:f="sap.f" controllerName="geosales.geosales.controller.Dashboard"
    xmlns:mvc="sap.ui.core.mvc" 
    displayBlock="true"
    xmlns="sap.m"
    xmlns:vbm="sap.ui.vbm"
    xmlns:l="sap.ui.layout">
    <Page id="page" title="{i18n>title}">
        <VBox >
            <HBox >
            <!--<SlideTile class="sapUiTinyMarginTop sapUiTinyMarginBegin" id="tileMotos">-->
                <GenericTile
                headerImage="sap-icon://bus-public-transport"                
                header="Motos"
                subheader="Contado"
				frameType="TwoByOne" 
                class="sapUiTinyMarginTop sapUiTinyMarginBegin">
				<TileContent footer="Abril 18, 2024" frameType="TwoByOne">
					<FeedContent contentText=""
				subheader="" value="132" class="valueMotos"/>
				</TileContent>
			</GenericTile>
			<GenericTile
                headerImage="sap-icon://sys-monitor"                
                header="Pantallas"
                subheader="Contado"
				frameType="TwoByOne" 
                class="sapUiTinyMarginTop sapUiTinyMarginBegin">
				<TileContent footer="Abril 18, 2024" frameType="TwoByOne">
					<FeedContent contentText=""
				subheader="" value="132" class="valuePantallas"/>
				</TileContent>
			</GenericTile>
            <GenericTile
                headerImage="sap-icon://iphone"                
                header="Celulares"
                subheader="Contado"
				frameType="TwoByOne" 
                class="sapUiTinyMarginTop sapUiTinyMarginBegin">
				<TileContent footer="Abril 18, 2024" frameType="TwoByOne">
					<FeedContent contentText=""
				subheader="" value="132" class="valueCelulares"/>
				</TileContent>
			</GenericTile>
            <GenericTile
                headerImage="sap-icon://cart-4"                
                header="Ecommerce"
                subheader="Contado"
				frameType="TwoByOne" 
                class="sapUiTinyMarginTop sapUiTinyMarginBegin">
				<TileContent footer="Abril 18, 2024" frameType="TwoByOne">
					<FeedContent contentText=""
				subheader="" value="132" class="valueEcommerce"/>
				</TileContent>
			</GenericTile>
            <GenericTile
                headerImage="sap-icon://money-bills"                
                header="Contado"
                subheader="Contado"
				frameType="TwoByOne" 
                class="sapUiTinyMarginTop sapUiTinyMarginBegin">
				<TileContent footer="Abril 18, 2024" frameType="TwoByOne">
					<FeedContent contentText=""
				subheader="" value="132" class="valueContado"/>
				</TileContent>
			</GenericTile>
            <!--</SlideTile>-->
        </HBox>
        <f:Card width="40%" class="sapUiTinyMargin">
            <f:content>
        <l:FixFlex class="fixFlexFixedSize">
            <l:fixContent>
				<vbm:AnalyticMap id="vbi" width="100%" height="500px" 
				initialPosition="-101;24;0" initialZoom="5" enableAnimation="true" disableZoom="true" disablePan="true" regions="{/Regions}"
                regionClick="onRegionClick" regionContextMenu="onRegionContextMenu">
                <vbm:regions>
                    <vbm:Region code="{code}" color="{color}"  tooltip="{country}"/>
                </vbm:regions>				
			</vbm:AnalyticMap>
        </l:fixContent>
        </l:FixFlex>
    </f:content>
    </f:Card>
    </VBox>
    </Page>
</mvc:View>
